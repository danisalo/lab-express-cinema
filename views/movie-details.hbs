<div>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{image}}" class="img-fluid rounded-start" alt="{{title}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text"><b>{{director}}</b></p>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">{{stars}}</p>
                    <p class="card-text"><small class="text-muted">{{showtimes}}</small></p>
                </div>
            </div>
        </div>
    </div>
    <a href="/movies" class="btn btn-primary">Go back</a>
</div>